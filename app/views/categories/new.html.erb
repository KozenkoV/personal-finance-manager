<div class="container">
  <h2 class="title-lg">Нова категорія</h2>

  <% if @category.present? %>
    <%= form_with model: @category do |form| %>
      <!-- Поля форми -->
     <p><%= form.label :name, 'Текст запиту' %></p>
     <p><%= form.text_area :name, rows: 5 %></p>

    <p class="mt"><%= form.label :description, 'Назва запиту' %></p>
    <p><%= form.text_field :description %></p>

    <p class="mt"><%= form.submit 'Створити', class: 'button button-main' %></p>
    <% end %>
    <% else %>
   <p>Помилка: змінна @category має значення nil</p>
  <% end %>
</div>
