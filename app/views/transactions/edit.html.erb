<h2>Редагувати транзакцію</h2> 
 
<%= form_with(model: @transaction, local: true) do |form| %> 
  <div class="mb-3"> 
    <%= form.label :category_id, "Категорія", class: "form-label" %> 
    <%= form.select :category_id, Category.all.collect { |category| [category.name, category.id] }, {}, { class: "form-select" } %> 
  </div> 
   
  <div class="mb-3"> 
    <%= form.label :transaction_type, "Тип транзакції", class: "form-label" %> 
    <%= form.text_field :transaction_type, class: 'form-control' %> 
  </div> 
 
  <div class="mb-3"> 
    <%= form.label :description, "Опис", class: "form-label" %> 
    <%= form.text_area :description, class: 'form-control', rows: 3 %> 
  </div> 
 
  <div class="mb-3"> 
    <%= form.label :total, "Сума", class: "form-label" %> 
    <%= form.number_field :total, step: 0.01, class: 'form-control' %> 
  </div> 
 
  <div> 
    <%= form.submit "Оновити", class: "btn btn-dark" %> 
    <%= link_to "Назад", transactions_path, class: "btn btn-dark" %> 
  </div> 
<% end %>