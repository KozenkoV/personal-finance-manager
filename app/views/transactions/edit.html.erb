<h2>Редагувати транзакцію</h2>

<%= form_with(model: @transaction, local: true) do |form| %>
  <div>
    <%= form.label :category_id, "Категорія" %>
    <%= form.select :category_id, Category.all.collect { |category| [category.name, category.id] } %>
  </div>
  
  <div>
    <%= form.label :transaction_type, "Тип транзакції" %>
    <%= form.text_field :transaction_type %>
  </div>

  <div>
    <%= form.label :description, "Опис" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :total, "Сума" %>
    <%= form.number_field :total, step: 0.01 %>
  </div>

  <div>
    <%= form.submit "Оновити" %>
  </div>
<% end %>

<p><%= link_to "Назад", transaction_path(@transaction) %></p>
