<h2>Нова транзакція</h2> 
 
<%= form_with(model: @transaction || Transaction.new) do |f| %> 
  <div class="mb-3"> 
    <%= f.label :category_id, "Категорія", class: "form-label" %> 
    <%= f.select :category_id, Category.all.collect { |category| [category.name, category.id] }, {}, { class: "form-select" } %> 
  </div> 
 
  <div class="mb-3"> 
    <%= f.label :transaction_type, "Тип транзакції", class: "form-label" %> 
    <%= f.text_field :transaction_type, class: 'form-control' %> 
  </div> 
 
  <div class="mb-3"> 
    <%= f.label :description, "Опис", class: "form-label" %> 
    <%= f.text_area :description, class: 'form-control', rows: 3 %> 
  </div> 
 
  <div class="mb-3"> 
    <%= f.label :total, "Сума", class: "form-label" %> 
    <%= f.number_field :total, step: 0.01, class: 'form-control' %> 
  </div> 
 
  <div class="mb-3"> 
    <%= f.submit "Створити", class: "btn btn-dark" %> 
    <%= link_to "Назад", transactions_path, class: "btn btn-dark" %> 
  </div> 
<% end %>